{
    "name": "serenity/cleaning-service",
    "description": "Sistema de Gerenciamento de ServiÃ§os de Limpeza Domiciliar",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.5",
        "twig/twig": "^3.7",
        "monolog/monolog": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Serenity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Serenity\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs src tests",
        "cs-fix": "phpcbf src tests"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
